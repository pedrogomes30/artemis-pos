# ============================================
# Artemis POS - Microservices Environment
# ============================================

# ============================================
# INFRASTRUCTURE
# ============================================

# PostgreSQL Main Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_secure_2025
POSTGRES_DB=artemis_pos

# Redis
REDIS_PORT=6379

# MinIO (S3-compatible Storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=http://minio:9000
MINIO_PUBLIC_ENDPOINT=http://localhost:9000

# MailHog (Email Testing)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@artemis-pos.local

# ============================================
# AUTH SERVICE
# ============================================

# Auth Database User
AUTH_DB_HOST=postgres
AUTH_DB_PORT=5432
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_pass_secure_2025
AUTH_DB_NAME=artemis_pos
AUTH_DB_SCHEMA=auth_schema

# Auth Database Connection URL (constructed from above)
AUTH_DB_URL="postgresql://${AUTH_DB_USER}:${AUTH_DB_PASSWORD}@${AUTH_DB_HOST}:${AUTH_DB_PORT}/${AUTH_DB_NAME}?schema=${AUTH_DB_SCHEMA}"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-2025"
JWT_EXPIRES_IN="6h"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================
# CATALOG SYNC SERVICE (Write)
# ============================================

# Catalog Database User
CATALOG_DB_HOST=postgres
CATALOG_DB_PORT=5432
CATALOG_DB_USER=catalog_user
CATALOG_DB_PASSWORD=catalog_pass_secure_2025
CATALOG_DB_NAME=artemis_pos
CATALOG_DB_SCHEMA=catalog_schema

# Catalog Sync Database Connection URL (constructed from above)
CATALOG_SYNC_DB_URL="postgresql://${CATALOG_DB_USER}:${CATALOG_DB_PASSWORD}@${CATALOG_DB_HOST}:${CATALOG_DB_PORT}/${CATALOG_DB_NAME}?schema=${CATALOG_DB_SCHEMA}"

# ============================================
# CATALOG SEARCH SERVICE (Read)
# ============================================

# Catalog Search Database Connection URL (uses same credentials as sync)
CATALOG_SEARCH_DB_URL="postgresql://${CATALOG_DB_USER}:${CATALOG_DB_PASSWORD}@${CATALOG_DB_HOST}:${CATALOG_DB_PORT}/${CATALOG_DB_NAME}?schema=${CATALOG_DB_SCHEMA}"
CATALOG_CACHE_TTL=300

# ============================================
# ORDER SERVICE
# ============================================

# Order Database User
ORDER_DB_HOST=postgres
ORDER_DB_PORT=5432
ORDER_DB_USER=order_user
ORDER_DB_PASSWORD=order_pass_secure_2025
ORDER_DB_NAME=artemis_pos
ORDER_DB_SCHEMA=order_schema

# Order Database Connection URL (constructed from above)
ORDER_DB_URL="postgresql://${ORDER_DB_USER}:${ORDER_DB_PASSWORD}@${ORDER_DB_HOST}:${ORDER_DB_PORT}/${ORDER_DB_NAME}?schema=${ORDER_DB_SCHEMA}"

# ============================================
# BFF WEB
# ============================================

WEB_CORS_ORIGIN="http://localhost:3000,http://localhost:4200"

# ============================================
# BFF APP
# ============================================

MOBILE_CACHE_TTL=600

NODE_ENV=development
APP_NAME="Artemis POS"
APP_VERSION="1.0.0"
